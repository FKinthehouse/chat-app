<!-- Super Simple AI Chat Interface -->
<div class="container mx-auto py-8 px-4">
  <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-indigo-600 px-6 py-4 text-gray-900 flex justify-between items-center">
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-3 bg-white rounded-full p-1 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        <h1 class="text-xl font-bold">AI Assistant</h1>
      </div>
      <%= link_to chats_path, class: "text-white hover:text-indigo-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
    </div>

    <!-- Chat Display -->
    <div class="p-6">
      <!-- AI Greeting -->
      <div class="flex mb-4">
        <div class="w-10 h-10 rounded-full bg-indigo-500 flex-shrink-0 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div class="ml-3 py-3 px-4 bg-gray-100 rounded-lg">
          <p><%= @ai_greeting %></p>
        </div>
      </div>

      <% if @user_message.present? %>
        <!-- User Message -->
        <div class="flex justify-end mb-4">
          <div class="mr-3 py-3 px-4 bg-indigo-100 text-gray-900 rounded-lg border border-indigo-400 shadow-sm" style="min-width:220px;">
            <p><%= @user_message %></p>
          </div>
          <div class="w-10 h-10 rounded-full bg-indigo-700 flex-shrink-0 flex items-center justify-center">
            <span class="text-white font-bold"><%= current_user.name[0].upcase %></span>
          </div>
        </div>

        <!-- AI Response -->
        <div class="flex mb-4">
          <div class="w-10 h-10 rounded-full bg-indigo-500 flex-shrink-0 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div class="ml-3 py-3 px-4 bg-gray-100 rounded-lg border border-indigo-300" style="min-width:220px;">
            <p><%= @ai_response %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Suggestion Chips -->
    <div class="px-6 py-3 bg-gray-50 border-t border-gray-200">
      <p class="text-sm text-gray-600 mb-2 font-medium">Try asking about:</p>
      <div class="flex flex-wrap gap-2">
        <button type="button" class="suggestion-chip bg-indigo-100 hover:bg-indigo-200 text-indigo-800 px-3 py-2 rounded-full text-sm font-medium" data-suggestion="Tell me a joke">Tell me a joke</button>
        <button type="button" class="suggestion-chip bg-indigo-100 hover:bg-indigo-200 text-indigo-800 px-3 py-2 rounded-full text-sm font-medium" data-suggestion="What can you do?">What can you do?</button>
        <button type="button" class="suggestion-chip bg-indigo-100 hover:bg-indigo-200 text-indigo-800 px-3 py-2 rounded-full text-sm font-medium" data-suggestion="How does this app work?">How does this app work?</button>
      </div>
    </div>

    <!-- Input Form -->
    <div class="px-6 py-4 border-t border-gray-200">
      <form action="/ai_chat/message" method="post" class="flex" id="ai-message-form">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="message[content]" placeholder="Type your message..." class="flex-1 rounded-full border-2 border-indigo-400 bg-white focus:bg-indigo-50 focus:ring-4 focus:ring-indigo-200 focus:border-indigo-600 text-lg px-8 py-4 shadow-md transition-all duration-200 outline-none" style="min-width: 400px; min-height: 52px; margin-right: 0.5rem;" required>
        <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-r-lg hover:bg-indigo-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>
<script>
  document.querySelectorAll('.suggestion-chip').forEach(function(btn) {
    btn.addEventListener('click', function() {
      const input = document.querySelector('input[name="message[content]"]');
      input.value = btn.dataset.suggestion;
      document.getElementById('ai-message-form').submit();
    });
  });
</script> 